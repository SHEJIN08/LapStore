<%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/admin/category.css">

    <body>
        <div class="dashboard-container">
            <%- include('../partials/sidebar',{activePage: 'category' }) %>

                <main class="main-content">
                    <header class="main-header">
                        <div class="header-title">
                            <h2>Category Management</h2>
                            <p>List all categories and manage access.</p>
                        </div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#addCategoryModal">
                            + Add New Category
                        </button>
                    </header>

                    <div class="search-filter-container card">
                        <form action="/admin/category" method="GET" class="search-form">
                            <div class="search-bar">
                                <img src="/images/admin/icons/search.png" alt="" class="search-icon">
                                <input type="text" name="search" placeholder="Search by category name..."
                                    value="<%= typeof currentSearch !== 'undefined' ? currentSearch : '' %>">
                            </div>

                            <div class="filter-status">
                                <img src="/images/admin/icons/filter.png" alt="" class="filter-icon">
                                <select name="status">
                                    <option value="all" <%=(typeof currentFilter==='undefined' || currentFilter==='all'
                                        ) ? 'selected' : '' %>>
                                        Status: All
                                    </option>
                                    <option value="active" <%=(typeof currentFilter !=='undefined' &&
                                        currentFilter==='active' ) ? 'selected' : '' %>>
                                        Status: Listed
                                    </option>
                                    <option value="blocked" <%=(typeof currentFilter !=='undefined' &&
                                        currentFilter==='blocked' ) ? 'selected' : '' %>>
                                        Status: Unlisted
                                    </option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">Filter</button>
                        </form>
                    </div>

                    <section class="card">
                        <div class="table-responsive">
                            <table class="category-table">
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Products</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories && categories.length> 0) { %>
                                        <% categories.forEach(category=> { %>
                                            <tr>
                                                <td>
                                                    <%= category.categoryName %>
                                                </td>
                                                <td>
                                                    <%= category.count || 0 %>
                                                </td>
                                                <td>
                                                    <% if (category.isListed) { %>
                                                        <span class="status-badge status-active">Listed</span>
                                                        <% } else { %>
                                                            <span class="status-badge status-blocked">Unlisted</span>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <%= String(category.createdAt).split(' ').slice(1,4).join(" ") %>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="/admin/category/edit/<%= category._id %>"
                                                            class="action-btn text-primary">
                                                            <img src="/images/admin/icons/edit-btn.png" alt="Edit"
                                                                style="width: 20px; height: 20px;">
                                                        </a>

                                                        <% if (category.isListed) { %>
                                                            <button
                                                                class="action-btn text-danger block-btn border-0 bg-transparent"
                                                                data-id="<%= category._id %>"
                                                                data-name="<%= category.categoryName %>"
                                                                title="Unlist Category">
                                                                <i class="bi bi-slash-circle"
                                                                    style="font-size: 1.2rem;"></i>
                                                            </button>
                                                            <% } else { %>
                                                                <button
                                                                    class="action-btn text-success unblock-btn border-0 bg-transparent"
                                                                    data-id="<%= category._id %>"
                                                                    data-name="<%= category.categoryName %>"
                                                                    title="List Category">
                                                                    <i class="bi bi-check-circle"
                                                                        style="font-size: 1.2rem;"></i>
                                                                </button>
                                                                <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="5" class="text-center">No categories found.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="pagination-container">
                            <span class="pagination-info">
                                Showing <%= (currentPage - 1) * 4 + 1 %> to <%= Math.min(currentPage * 4,
                                        totalCategories) %> of <%= totalCategories %> results
                            </span>
                            <div class="pagination-controls">
                                <% if (currentPage> 1) { %>
                                    <a href="/admin/category?page=<%= currentPage - 1 %>"
                                        class="btn prev-btn">Previous</a>
                                    <% } else { %>
                                        <button class="btn prev-btn" disabled>Previous</button>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <a href="/admin/category?page=<%= currentPage + 1 %>"
                                                    class="btn btn-primary next-btn">Next</a>
                                                <% } else { %>
                                                    <button class="btn btn-primary next-btn" disabled>Next</button>
                                                    <% } %>
                            </div>
                        </div>
                    </section>
                </main>
        </div>

        <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg rounded-3">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Category</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
    <form id="categoryForm" novalidate>
    <div class="mb-4">
        <label class="form-label">Category Name <span class="text-danger">*</span></label>
        <input type="text" class="form-control" name="categoryName" required>
    </div>
    <div class="mb-4">
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description" rows="3"></textarea>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <label class="form-label">Display Count</label>
            <input type="number" class="form-control" name="count" value="0" disabled>
        </div>
        <div class="col-md-6">
            <label class="form-label">Status</label>
            <select class="form-select" name="isListed">
                <option value="true">List</option>
                <option value="false">Unlist</option>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-save">Save Category</button>
    </div>
</form>
                    </div>
                </div>
            </div>
        </div>



        <div id="confirmationModal" class="modal-overlay" style="display: none;">
            <div class="modal-content">
                <div class="modal-header">
                    <h3><span class="warning-icon">&#9888;</span> <span id="modalTitle">Update Category</span></h3>
                    <span class="modal-close-btn">&times;</span>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to <strong id="actionText">update</strong> <strong id="modalCatName">this
                            category</strong>?</p>
                    <p class="modal-subtitle" id="modalSubText">This will change visibility.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-cancel" id="cancelModalBtn">Cancel</button>
                    <button type="button" id="confirmActionBtn" class="btn-confirm-block">Confirm</button>
                </div>
            </div>
        </div>
 <%- include('../partials/footer') %>      
        <script src="/js/axios.min.js"></script>
         <script src="/js/admin/category.js" defer></script>
        
    </body>
</html>                                           
   