<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/admin/brand.css">

<body>

    <div class="dashboard-container">

        <%- include('../partials/sidebar',{activePage: 'brands' }) %>

        <main class="main-content">

            <header class="main-header">
                <div class="header-title">
                    <h2>Brand Management</h2>
                    <p>List all Brands and manage access.</p>
                </div>
                <a href="/admin/brands/add" class="btn btn-primary">
                    + New Brand
                </a>
            </header>

            <section class="card">
                <div class="table-responsive">
                    <table class="brand-table">
                        <thead>
                            <tr>
                                <th>Logo</th>
                                <th>Brand Name</th>
                                <th>Country</th>
                                <th>Founded</th>
                                <th>Website</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                    <td>
                                        <div class="img-container">
                                            <img src="/images/brands/dell.png" alt="Dell" class="brand-logo">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="brand-info">
                                            <span class="brand-name">Dell</span>
                                            <span class="brand-id">BRD-001</span>
                                        </div>
                                    </td>
                                    <td>United States</td>
                                    <td>1984</td>
                                    <td><a href="#" class="visit-site">Visit Site</a></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/brands/edit/1" class="action-btn edit" title="Edit">
                                                <i class="bi bi-pencil"></i> </a>
                                            <a href="/admin/brands/delete/1" class="action-btn delete" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <div class="img-container">
                                            <img src="/images/brands/hp.png" alt="HP" class="brand-logo">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="brand-info">
                                            <span class="brand-name">HP</span>
                                            <span class="brand-id">BRD-002</span>
                                        </div>
                                    </td>
                                    <td>United States</td>
                                    <td>1939</td>
                                    <td><a href="#" class="visit-site">Visit Site</a></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/admin/brands/edit/2" class="action-btn edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/admin/brands/delete/2" class="action-btn delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                </tbody>
                    </table>
                </div>

                <div class="pagination-container">
                    <span class="pagination-info">
                        Showing 1 to 10 of 97 results
                    </span>
                    <div class="pagination-controls">
                        <button class="btn prev-btn disabled-link">Previous</button>
                        <button class="btn btn-primary next-btn">Next</button>
                    </div>
                </div>
            </section>

        </main>
    </div>

<%- include('../partials/footer') %>