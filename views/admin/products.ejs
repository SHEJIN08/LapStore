<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/admin/product.css">
<body>
    
    <div class="product-main-content">
        
        <%- include('../partials/sidebar',{activePage: 'products' }) %>
    
        <div class="main-page-content"> 

            <div class="product-header">
                <h1>Products</h1>
                <a href="/admin/add-product" class="add-product-btn">Add New Product</a>
            </div>
    
            <div class="product-grid">
                <% if(products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <div class="card-image">
                                <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                            </div>
                            <div class="card-content">
                                <h3><%= product.name %></h3>
                                <p class="stock-status"><%= product.stock %> in stock</p>
                            </div>
                            <div class="card-footer">
                                <span class="price">$<%= product.price %></span>
                                <div class="card-actions">
                                    <button title="Edit"><img src="/images/admin/icons/edit-btn.png" alt=""></button>
                                    <button title="Delete"><img src="/images/admin/icons/delete-btn.png" alt=""></button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No products found. Click "Add New Product" to start.</p>
                <% } %>
            </div> 

            </div> 
    </div> 
</body>
</html>