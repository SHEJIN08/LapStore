<%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/admin/product.css">

    <body>

        <div class="product-main-content">

            <%- include('../partials/sidebar',{activePage: 'products' }) %>

                <div class="main-page-content">

                    <div class="product-header">
                        <h1>Products</h1>
                        <a href="/admin/add-product" class="add-product-btn">Add New Product</a>
                    </div>

                    <div class="product-grid">
                        <% if(products && products.length> 0) { %>c
                            <% products.forEach(product=> { %>
                                <div class="product-card">
                                    <div class="card-image">
                                        <img src="<%= product.images[0] %>" alt="<%= product.name %>">
                                    </div>
                                    <div class="card-content">
                                        <h3>
                                            <%= product.name %>
                                        </h3>
                                        <p class="stock-status">
                                            <%= product.stock %> in stock
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <span class="price">$<%= product.price %></span>
                                        <div class="card-actions">
                                            <button type="button" onclick="openVariantModal('<%= product._id %>')"
                                                title="Add Variant"
                                                style="border: none; background: none; cursor: pointer; font-size: 18px;">
                                                âž•
                                            </button>
                                            <a href="/admin/edit-product/<%= product._id %>" title="Edit">
                                                <img src="/images/admin/icons/edit-btn.png" alt="Edit">
                                            </a>
                                            <a href="/admin/delete-product/<%= product._id %>" title="Delete">
                                                <img src="/images/admin/icons/delete-btn.png" alt="Delete">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p>No products found. Click "Add New Product" to start.</p>
                                        <% } %>
                    </div>

                </div>
        </div>
        <div id="variantModal" class="modal-overlay">
            <div class="modal-content">

                <div class="modal-header">
                    <h3>Add New Variant</h3>
                    <button type="button" class="close-modal" onclick="closeModal()">&times;</button>
                </div>
                <p class="modal-subtitle">Configure details for this product variant.</p>

                <form id="variantForm" method="POST">

                    <div class="variant-grid">
                        <div class="form-group">
                            <label>Color</label>
                            <input type="text" name="color" placeholder="e.g., Titanium Black">
                        </div>
                        <div class="form-group">
                            <label>RAM</label>
                            <input type="text" name="ram" placeholder="e.g., 8GB" required>
                        </div>
                        <div class="form-group">
                            <label>Storage</label>
                            <input type="text" name="storage" placeholder="e.g., 256GB" required>
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input type="number" name="price" placeholder="0.00" required>
                        </div>
                        <div class="form-group">
                            <label>Stock Quantity</label>
                            <input type="number" name="stock" placeholder="e.g., 100" required>
                        </div>
                        <div class="form-group">
                            <label>Graphics (Optional)</label>
                            <input type="text" name="graphics" placeholder="e.g., NVIDIA RTX 3060">
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                        <button type="submit" class="btn-save">Save Variant</button>
                    </div>
                </form>
            </div>
        </div>
        <script>
            function openVariantModal(productId) {
                // 1. Select the modal
                const modal = document.getElementById('variantModal');

                // 2. Select the form inside the modal
                const form = document.getElementById('variantForm');

                // 3. Update the form action to include the specific Product ID
                form.action = `/admin/add-variant/${productId}`;

                // 4. Show the modal (CSS flex display centers it)
                modal.style.display = 'flex';
            }

            function closeModal() {
                const modal = document.getElementById('variantModal');
                modal.style.display = 'none';
            }

            // Close modal if user clicks outside the box
            window.onclick = function (event) {
                const modal = document.getElementById('variantModal');
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
    </body>

    </html>