<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/user/ordersPage.css">

<body>
    <%- include('../partials/navbar') %>

    <div class="main-container">
        
        <%- include('./partials/profileSidebar', {active: 'ordersPage'}) %>

        <main class="content">
            
            <div class="page-header">
                <h1>My Orders</h1>
                <p>View and manage your past and current orders.</p>
            </div>

            <div class="order-tabs">
                <a href="/user/home/orders" class="tab-link active">All Orders</a>
                <a href="/user/home/orders?status=Pending" class="tab-link">Pending</a>
                <a href="/user/home/orders?status=Shipped" class="tab-link">Shipped</a>
                <a href="/user/home/orders?status=Delivered" class="tab-link">Delivered</a>
                <a href="/user/home/orders?status=Cancelled" class="tab-link">Cancelled</a>
            </div>

            <div class="orders-list">
                
                <div class="order-card">
                    <div class="card-top">
                        <span class="order-id">Order ID: MY-836491-23</span>
                        <span class="status-badge delivered">
                            <span class="dot"></span> Delivered
                        </span>
                    </div>
                    
                    <div class="card-body">
                        <div class="product-visual">
                            <img src="/images/products/macbook.png" alt="Product" onerror="this.src='https://placehold.co/100x100?text=Laptop'">
                        </div>
                        
                        <div class="product-info">
                            <h3>MacBook Pro 16"</h3>
                            <div class="specs">
                                <span>Color: <br> <b>Space Gray</b></span>
                                <span>Specs: <br> <b>M3 Max, 36GB RAM</b></span>
                            </div>
                        </div>

                        <div class="order-meta">
                            <div class="meta-item">
                                <span>Qty:</span>
                                <b>1</b>
                            </div>
                            <div class="meta-item">
                                <span>Date:</span>
                                <b>Oct 26, 2023</b>
                            </div>
                            <div class="meta-item total">
                                <span>Total:</span>
                                <b>$3,499.00</b>
                            </div>
                        </div>

                        <div class="card-actions">
                            <a href="/user/home/orders/details/123" class="btn-secondary">View Details</a>
                            <button class="btn-primary">Write a Review</button>
                        </div>
                    </div>
                </div>

                <div class="order-card">
                    <div class="card-top">
                        <span class="order-id">Order ID: MY-36488-23</span>
                        <span class="status-badge shipped">
                            <span class="dot"></span> Shipped
                        </span>
                    </div>
                    
                    <div class="card-body">
                        <div class="product-visual">
                            <img src="/images/products/dell.png" alt="Product" onerror="this.src='https://placehold.co/100x100?text=Laptop'">
                        </div>
                        
                        <div class="product-info">
                            <h3>Dell XPS 15</h3>
                            <div class="specs">
                                <span>Color: <br> <b>Platinum Silver</b></span>
                                <span>Specs: <br> <b>Intel i7, 32GB RAM</b></span>
                            </div>
                        </div>

                        <div class="order-meta">
                            <div class="meta-item">
                                <span>Qty:</span>
                                <b>1</b>
                            </div>
                            <div class="meta-item">
                                <span>Date:</span>
                                <b>Oct 24, 2023</b>
                            </div>
                            <div class="meta-item total">
                                <span>Total:</span>
                                <b>$2,299.00</b>
                            </div>
                        </div>

                        <div class="card-actions">
                            <a href="#" class="btn-secondary">View Details</a>
                            <button class="btn-primary">Track Order</button>
                        </div>
                    </div>
                </div>

                <div class="order-card">
                    <div class="card-top">
                        <span class="order-id">Order ID: MY-836502-23</span>
                        <span class="status-badge processing">
                            <span class="dot"></span> Processing
                        </span>
                    </div>
                    
                    <div class="card-body">
                        <div class="product-visual">
                            <img src="/images/products/hp.png" alt="Product" onerror="this.src='https://placehold.co/100x100?text=Laptop'">
                        </div>
                        
                        <div class="product-info">
                            <h3>HP Spectre x360</h3>
                            <div class="specs">
                                <span>Color: <br> <b>Nightfall Black</b></span>
                                <span>Specs: <br> <b>Intel i7, 16GB</b></span>
                            </div>
                        </div>

                        <div class="order-meta">
                            <div class="meta-item">
                                <span>Qty:</span>
                                <b>1</b>
                            </div>
                            <div class="meta-item">
                                <span>Date:</span>
                                <b>Oct 28, 2023</b>
                            </div>
                            <div class="meta-item total">
                                <span>Total:</span>
                                <b>$1,599.00</b>
                            </div>
                        </div>

                        <div class="card-actions">
                            <a href="#" class="btn-secondary">View Details</a>
                            <button class="btn-danger">Cancel Order</button>
                        </div>
                    </div>
                </div>

            </div>

            <div class="pagination-container">
                <a href="#" class="nav-link prev disabled">Previous</a>
                <div class="page-numbers">
                    <a href="#" class="page-num active">1</a>
                    <a href="#" class="page-num">2</a>
                    <a href="#" class="page-num">3</a>
                </div>
                <a href="#" class="nav-link next">Next â†’</a>
            </div>

        </main>
    </div>

<%- include('../partials/footer') %>
</body>