<%- include('../partials/header') %>
<link rel="stylesheet" href="/css/user/orderSuccess.css">

<body>
    <%- include('../partials/navbar') %>

    <div class="main-container">
        
        <div class="success-card">
            <div class="success-icon">
                <i class="fa-solid fa-check"></i>
            </div>

            <h1 class="success-title">Order Successful!</h1>
            
            <p class="order-info">
                Your order # <span class="order-id"><%= orderId || order %></span> has been placed successfully.
            </p>
            <% if (order.paymentMethod === 'Razorpay') { %>
        <div class="payment-details-box">
            <p class="detail-row">
                <span class="label">Payment ID:</span>
                <span class="value"><%= order.razorpayPaymentId %></span>
            </p>
            <p class="detail-row">
                <span class="label">Razorpay Order ID:</span>
                <span class="value"><%= order.razorpayOrderId %></span>
            </p>
        </div>
    <% } %>

            <p class="email-info">
                You will receive a confirmation email shortly with your order details.
            </p>

            <p class="thank-you">
                Thank you for shopping with LapStore!
            </p>

            <a href="/user/home/shop" class="continue-btn">Continue Shopping</a>

            <a href="/user/home/orders/details/<%= order._id %>" class="view-btn">View details</a>
        </div>

    </div>

<%- include('../partials/footer') %>
</body>