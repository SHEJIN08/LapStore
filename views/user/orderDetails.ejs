<%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/user/orderDetails.css">

    <body>
        <%- include('../partials/navbar') %>

            <div class="main-container">

                <%- include('./partials/profileSidebar', {active: 'ordersPage' }) %>

                    <main class="content">

                        <div class="details-header">
                            <div class="header-left">
                                <a href="/user/home/orders" class="back-link">
                                    <i class="fa-solid fa-arrow-left"></i> Back
                                </a>
                                <div class="title-group">
                                    <h1>Order Details</h1>
                                    <span class="order-id">#<%= order.orderId %></span>
                                </div>
                            </div>
                            <% if( order.status==='Delivered' ){ %>
                                <div class="header-right">
                                    <a href="/user/orders/invoice/<%= order._id %>" class="btn-invoice">
                                        <i class="fa-solid fa-file-invoice"></i> Download Invoice
                                    </a>
                                </div>
                                <% } %>

                        </div>

                        <section class="card timeline-card">
                            <% const isReturnActive=['Return Request', 'Returned' ].includes(order.status); const
                                history=order.orderHistory || []; const getDate=(status)=> {
                                const entry = history.find(h => h.status === status);
                                return entry ? new Date(entry.date).toLocaleDateString() : '--';
                                };
                                %>

                                <% if (!isReturnActive) { %>

                                    <div class="steps-container">
                                        <% const steps=['Pending', 'Processing' , 'Shipped' , 'Out for Delivery'
                                            , 'Delivered' ]; const currentStepIndex=steps.indexOf(order.status); const
                                            isCancelled=order.status==='Cancelled' ; %>

                                            <div
                                                class="step <%= (currentStepIndex >= 0 && !isCancelled) ? 'active' : '' %>">
                                                <div class="step-icon"><i class="fa-solid fa-box"></i></div>
                                                <div class="step-text">
                                                    <span class="step-title">Order Placed</span>
                                                    <span class="step-date">
                                                        <%= new Date(order.createdAt).toLocaleDateString() %>
                                                    </span>
                                                </div>
                                            </div>
                                            <div
                                                class="step-line <%= (currentStepIndex >= 2 && !isCancelled) ? 'active' : '' %>">
                                            </div>

                                            <div
                                                class="step <%= (currentStepIndex >= 2 && !isCancelled) ? 'active' : '' %>">
                                                <div class="step-icon"><i class="fa-solid fa-truck-fast"></i></div>
                                                <div class="step-text">
                                                    <span class="step-title">Shipped</span>
                                                    <span class="step-date">
                                                        <%= getDate('Shipped') %>
                                                    </span>
                                                </div>
                                            </div>
                                            <div
                                                class="step-line <%= (currentStepIndex >= 3 && !isCancelled) ? 'active' : '' %>">
                                            </div>

                                            <div
                                                class="step <%= (currentStepIndex >= 3 && !isCancelled) ? 'active' : '' %>">
                                                <div class="step-icon"><i class="fa-solid fa-motorcycle"></i></div>
                                                <div class="step-text">
                                                    <span class="step-title">Out for Delivery</span>
                                                    <span class="step-date">
                                                        <%= getDate('Out for Delivery') %>
                                                    </span>
                                                </div>
                                            </div>
                                            <div
                                                class="step-line <%= (currentStepIndex >= 4 && !isCancelled) ? 'active' : '' %>">
                                            </div>

                                            <div
                                                class="step <%= (currentStepIndex >= 4 && !isCancelled) ? 'active' : '' %>">
                                                <div class="step-icon"><i class="fa-solid fa-check"></i></div>
                                                <div class="step-text">
                                                    <span class="step-title">Delivered</span>
                                                    <span class="step-date">
                                                        <%= getDate('Delivered') %>
                                                    </span>
                                                </div>
                                            </div>
                                    </div>

                                    <% if (isCancelled) { %>
                                        <div class="alert-banner error" style="margin-top: 20px;">
                                            <i class="fa-solid fa-circle-xmark"></i> This order has been Cancelled.
                                        </div>
                                        <% } %>

                                            <% } else { %>

                                                <% const returnStatus=order.returnRequest.status; const
                                                    isApproved=returnStatus==='Approved' ; const
                                                    isRejected=returnStatus==='Rejected' ; const
                                                    isCompleted=order.status==='Returned' ; %>

                                                    <div class="steps-container return-mode">

                                                        <div class="step active">
                                                            <div class="step-icon return-icon"><i
                                                                    class="fa-solid fa-rotate-left"></i></div>
                                                            <div class="step-text">
                                                                <span class="step-title">Return Requested</span>
                                                                <span class="step-date">
                                                                    <%= new
                                                                        Date(order.returnRequest.requestDate).toLocaleDateString()
                                                                        %>
                                                                </span>
                                                            </div>
                                                        </div>

                                                        <div
                                                            class="step-line <%= (isApproved || isRejected) ? 'active' : '' %>">
                                                        </div>

                                                        <div
                                                            class="step <%= (isApproved || isRejected) ? 'active' : '' %>">
                                                            <div class="step-icon return-icon">
                                                                <% if(isRejected) { %>
                                                                    <i class="fa-solid fa-circle-xmark"
                                                                        style="color: #EF4444;"></i>
                                                                    <% } else { %>
                                                                        <i class="fa-solid fa-user-shield"></i>
                                                                        <% } %>
                                                            </div>
                                                            <div class="step-text">
                                                                <span class="step-title">Admin Review</span>
                                                                <span class="step-date">
                                                                    <%= (isApproved || isRejected) ? getDate('Returned')
                                                                        || 'Reviewed' : 'Pending' %>
                                                                </span>
                                                            </div>
                                                        </div>

                                                        <div
                                                            class="step-line <%= (isCompleted && isApproved) ? 'active' : '' %>">
                                                        </div>

                                                        <div
                                                            class="step <%= (isCompleted && isApproved) ? 'active' : '' %>">
                                                            <div class="step-icon return-icon"><i
                                                                    class="fa-solid fa-hand-holding-dollar"></i></div>
                                                            <div class="step-text">
                                                                <span class="step-title">Approved & Refunded</span>
                                                                <span class="step-date">
                                                                    <%= isCompleted ? getDate('Returned') : '--' %>
                                                                </span>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <% if (isRejected) { %>
                                                        <div class="alert-banner error" style="margin-top: 20px;">
                                                            <i class="fa-solid fa-circle-exclamation"></i> Return
                                                            Request Rejected. Please contact support.
                                                        </div>
                                                        <% } else if (isApproved) { %>
                                                            <div class="alert-banner success"
                                                                style="margin-top: 20px; background-color: #EFF6FF; color: #1E40AF;">
                                                                <i class="fa-solid fa-circle-check"></i> Return
                                                                Approved. Refund has been initiated.
                                                            </div>
                                                            <% } else { %>
                                                                <div class="alert-banner"
                                                                    style="margin-top: 20px; background-color: #FFF7ED; color: #9A3412;">
                                                                    <i class="fa-regular fa-clock"></i> Return Request
                                                                    is under review.
                                                                </div>
                                                                <% } %>

                                                                    <% } %>
                        </section>

                        <section class="card items-card">
                            <h3>Items Ordered</h3>
                            <div class="items-list">
                                <% order.orderedItems.forEach(item=> { %>
                                    <div class="item-row" style="align-items: center; justify-content: space-between;">
                                        <div style="display: flex; gap: 15px; align-items: center; flex: 1;">
                                            <div class="item-image">
                                                <img src="<%= item.image %>" alt="<%= item.productName %>"
                                                    onerror="this.src='https://placehold.co/80'">
                                            </div>
                                            <div class="item-details">
                                                <h4><%= item.productName %></h4>
                                                <p class="specs">Qty: <%= item.quantity %></p>

                                                <% 
                                                    // 1. Get the specific status of this item
                                                    let displayStatus = item.productStatus; 
                                                    let badgeClass = '';

                                                    // 2. Map statuses to specific CSS classes
                                                    if (displayStatus === 'Cancelled') {
                                                        badgeClass = 'status-cancelled'; // Red
                                                    } 
                                                    else if (displayStatus === 'Returned') {
                                                        badgeClass = 'status-returned'; // Blue/Grey
                                                    } 
                                                    else if (displayStatus === 'Return Request') {
                                                        badgeClass = 'status-pending'; // Orange/Yellow
                                                    }
                                                    else if (displayStatus === 'Return Rejected') {
                                                        badgeClass = 'status-cancelled'; // Red or a new color
                                                        displayStatus = 'Return Rejected';
                                                    }
                                                    // 3. Handle Active/Default statuses
                                                    else {
                                                        // If the individual item is "Ordered" or "Pending", 
                                                        // it should show the progress of the overall order
                                                        if (order.status === 'Delivered') {
                                                            displayStatus = 'Delivered';
                                                            badgeClass = 'status-active'; // Green
                                                        } else if (order.status === 'Cancelled') {
                                                            displayStatus = 'Cancelled';
                                                            badgeClass = 'status-cancelled';
                                                        } else {
                                                            displayStatus = order.status;
                                                            badgeClass = 'status-active';
                                                        }
                                                    }
                                                %>

                                                <span class="status-badge <%= badgeClass %>">
                                                    <%= displayStatus %>
                                                </span>
                                            </div>
                                        </div>
                                         %>
                                        <div class="item-price" style="margin-right: 20px;">
                                            ₹<%= item.price.toLocaleString() %>
                                        </div>

                                    <div class="item-actions">
                                        <% if (item.productStatus === 'Cancelled') { %>
                                            <button disabled class="btn-disabled">Cancelled</button>
                                        <% } else if (item.productStatus === 'Returned') { %>
                                            <button disabled class="btn-disabled">Returned</button>
                                        <% } else if (item.productStatus === 'Return Rejected') { %>
                                            <button  class="btn-disabled" style=" background-color: rgb(255, 224, 224);color: #b91c1c;border: none;padding: 10px;border-radius: 9px;">Return Rejected</button>
                                        <% } else if (item.productStatus === 'Return Request') { %>
                                            <button disabled class="btn-disabled">Return Pending</button>
                                        <% } else { %>
                                            <% if (['Pending', 'Processing'].includes(order.status)) { %>
                                                <button class="btn-cancel" onclick="cancelItem('<%= order._id %>', '<%= item._id %>')">Cancel Item</button>
                                            <% } else if (order.status === 'Delivered') { %>
                                                <button class="btn-return" onclick="openReturnModal('<%= order._id %>', '<%= item._id %>')" style="height: 42px;">Return Item</button>
                                            <% } %>
                                        <% } %>
                                    </div>

                                    </div>
                                    <% }) %>
                            </div>
                        </section>
                        <div class="info-grid">
                            <section class="card info-card">
                                <h3>Shipping Address</h3>
                                <div class="info-content">
                                    <p class="name">
                                        <%= order.address.fullName %>
                                    </p>
                                    <p>
                                        <%= order.address.address1 %>
                                    </p>
                                    <% if(order.address.address2){ %>
                                        <p>
                                            <%= order.address.address2 %>
                                        </p>
                                        <% } %>
                                            <p>
                                                <%= order.address.city %>, <%= order.address.state %>
                                                        <%= order.address.pincode %>
                                            </p>
                                            <p class="phone">
                                                <%= order.address.phone %>
                                            </p>
                                </div>
                            </section>

                            <section class="card info-card">
                                <h3>Payment Method</h3>
                                <div class="info-content">
                                    <p class="payment-type">
                                        <i class="fa-regular fa-credit-card"></i>
                                        <%= order.paymentMethod %>
                                    </p>
                                    <p class="status <%= order.paymentStatus.toLowerCase() %>">
                                        Status: <b>
                                            <%= order.paymentStatus %>
                                        </b>
                                    </p>
                                </div>
                            </section>
                        </div>

                        <section class="card summary-card">
                            <h3>Order Summary</h3>
                            <div class="summary-rows">
                                <div class="row">
                                    <span>Subtotal</span>
                                    <span>₹<%= order.totalPrice.toLocaleString() %></span>
                                </div>
                                <div class="row">
                                    <span>Shipping</span>
                                    <span class="<%= order.totalPrice >= 100000 ? 'free' : '' %>">
                                        <%= order.totalPrice >= 100000 ? 'Free' : '₹' + 100 %>
                                       
                                    </span>
                                    <span>Tax</span>
                                    <span class="<%= order.totalPrice * .05 %>">
                                        <%= '₹' + Math.round(order.totalPrice * .05) %>
                                    </span>
                                </div>
                                <% if(order.discount> 0) { %>
                                    <div class="row">
                                        <span>Discount</span>
                                        <span class="discount">-₹<%= order.discount %></span>
                                    </div>
                                    <% } %>
                                        <div class="row total">
                                            <span>Total Amount</span>
                                            <span>₹<%= Math.round(order.finalAmount).toLocaleString() %></span>
                                        </div>
                            </div>
                        </section>

                        <% if (order.status==='Delivered' ) { %>
                            <div class="action-bar">
                                <button class="btn-return" onclick="openReturnModal('<%= order._id %>')">
                                    Request Replacement/Refund
                                </button>
                            </div>
                            <% } else if (order.status==='Pending' || order.status==='Processing' ) { %>
                                <div class="action-bar">
                                    <button class="btn-cancel" onclick="cancelOrder('<%= order._id %>')">Cancel
                                        Order</button>
                                </div>
                                <% } %>

                    </main>
            </div>

            <%- include('../partials/footer') %>

                <div id="returnModal" class="modal-overlay hidden">
                    <div class="modal-container" style="max-width: 600px;">
                        <div class="modal-header" style="border:none; padding-bottom: 0;">
                            <h2 class="modal-title" style="text-align: left;">Request Refund</h2>
                            <button class="close-btn" onclick="closeReturnModal()">&times;</button>
                        </div>

                        <div class="request-type-toggle">
                            <button type="button" class="type-btn active" onclick="setReturnType('Refund', this)">
                                Request Refund
                            </button>
                            <input type="hidden" id="returnType" value="Refund">
                            <input type="hidden" id="returnItemId" value="">
                        </div>

                        <div class="product-summary-box">
                            <div class="p-info">
                                <span style="font-weight: 600; display: block;">Item from Order</span>
                                <span style="font-size: 13px; color: #6B7280;">Order #<%= order.orderId %></span>
                            </div>
                        </div>

                        <div class="modal-form">
                            <label class="input-label">Reason for Request</label>
                            <select id="returnReason" class="form-select">
                                <option value="" disabled selected>Select a reason</option>
                                <option value="Damaged Product">Damaged Product</option>
                                <option value="Wrong Item Sent">Wrong Item Sent</option>
                                <option value="Defective">Defective / Not Working</option>
                                <option value="Quality Not as Expected">Quality Not as Expected</option>
                            </select>

                            <label class="input-label">Additional Comments (optional)</label>
                            <textarea id="returnComment" class="form-textarea"
                                placeholder="Please describe the issue in detail..."></textarea>

                            <div class="upload-area" onclick="document.getElementById('returnFile').click()">
                                <i class="fa-solid fa-cloud-arrow-up"
                                    style="font-size: 24px; color: #9CA3AF; margin-bottom: 8px;"></i>

                                <span style="font-weight: 600; font-size: 14px; color: #374151;">Upload Proof
                                    (optional)</span>

                                <span id="fileNameDisplay"
                                    style="font-size: 12px; color: #9CA3AF; margin-bottom: 12px;">
                                    Drag & drop or click to upload
                                </span>

                                <button class="btn-choose-file" type="button">Choose File</button>

                                <input type="file" id="returnFile" hidden onchange="handleFileSelect(this)">
                            </div>
                        </div>

                        <div class="modal-actions" style="justify-content: flex-end; padding-top: 20px;">
                            <button class="btn-text" onclick="closeReturnModal()">Cancel</button>
                            <button class="btn-blue-submit" id="sub-unq" onclick="submitReturnRequest()">Submit
                                Request</button>
                        </div>
                    </div>
                </div>

                <script src="/js/axios.min.js"></script>

                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

          <script>
    // 1. Toast Notification Helper
    const showToast = (message, type) => {
        const bgColor = type === 'success' ? "linear-gradient(to right, #30E527, #238500)" : "linear-gradient(to right, #e52d27, #b31217)";
        Toastify({
            text: message,
            duration: 3000,
            gravity: "top",
            position: "right",
            style: {
                background: bgColor,
                borderRadius: '10px'
            }
        }).showToast();
    };

    // 2. Open Modal & Set IDs
    function openReturnModal(orderId, itemId) {
        // Reset Form
        document.getElementById('returnReason').value = "";
        document.getElementById('returnComment').value = "";
        document.getElementById('returnFile').value = "";
        document.getElementById('fileNameDisplay').innerText = "Drag & drop or click to upload";

        // Set Global Order ID
        window.currentReturnOrderId = orderId;

        // Set Item ID to Hidden Input
        const itemInput = document.getElementById('returnItemId');

        if (itemId && itemId !== 'null' && itemId !== 'undefined') {
            console.log("Opening Return for SINGLE ITEM:", itemId);
            itemInput.value = itemId; // Set the specific ID
        } else {
            console.log("Opening Return for WHOLE ORDER");
            itemInput.value = ""; // Clear it
        }

        document.getElementById('returnModal').classList.remove('hidden');
    }

    function closeReturnModal() {
        document.getElementById('returnModal').classList.add('hidden');
    }

    // 3. Submit Request
    async function submitReturnRequest() {
        const sub_btn = document.getElementById('sub-unq');
        const originalText = sub_btn.innerText;

        // Get Form Values
        const type = document.getElementById('returnType').value;
        const reason = document.getElementById('returnReason').value;
        const comment = document.getElementById('returnComment').value;
        const fileInput = document.getElementById('returnFile');
        
        // CRITICAL: Get the Item ID from the hidden input
        const itemId = document.getElementById('returnItemId').value;

        // Debug Log to Console (Check this if it fails!)
        console.log("Submitting Request -> Order:", window.currentReturnOrderId, "Item:", itemId);

        if (!reason) {
            showToast("Please select a reason", "error");
            return;
        }

        const formData = new FormData();
        formData.append('orderId', window.currentReturnOrderId);
        formData.append('returnType', type);
        formData.append('reason', reason);
        formData.append('comment', comment);

        // Only append itemId if it is not empty
        if (itemId && itemId.trim() !== "") {
            formData.append('itemId', itemId);
        }

        if (fileInput.files.length > 0) {
            formData.append('returnImage', fileInput.files[0]);
        }

        try {
            sub_btn.innerText = 'Uploading...';
            sub_btn.disabled = true;
            sub_btn.style.opacity = '0.7';

            const response = await axios.post('/user/orders/return', formData, {
                headers: {
                    'Content-Type': 'multipart/form-data'
                }
            });

            if (response.data.success) {
                closeReturnModal();
                Swal.fire('Success', 'Return request submitted', 'success')
                    .then(() => window.location.reload());
            }
        } catch (err) {
            console.error(err);
            const msg = err.response?.data?.message || "Failed to submit request";
            showToast(msg, "error");

            sub_btn.innerText = originalText;
            sub_btn.disabled = false;
            sub_btn.style.opacity = '1';
        }
    }

    async function cancelOrder(orderId) {
        // Updated Swal to ask for a REASON
        const result = await Swal.fire({
            title: 'Cancel Order?',
            text: "Please provide a reason for cancellation:",
            input: 'text', // <--- Adds text input
            inputPlaceholder: 'Changed my mind, Found better price, etc.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, cancel order!',
            inputValidator: (value) => {
                if (!value) {
                    return 'You need to write a reason!'
                }
            }
        });

        if (!result.isConfirmed) return;
        
        const reason = result.value; // Get the text input

        try {
            // Point to the NEW unified route
            const response = await axios.patch('/user/orders/cancel', { 
                orderId: orderId,
                reason: reason // Send the reason
            });

            if (response.data.success) {
                await Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success');
                window.location.reload();
            } else {
                showToast(response.data.message, 'error');
            }
        } catch (error) {
            console.error(error);
            const errMsg = error.response?.data?.message || "Something went wrong";
            showToast(errMsg, "error");
        }
    }

    // 4. Cancel Order Item (Existing logic)
    async function cancelItem(orderId, itemId) {
        const result = await Swal.fire({
            title: 'Cancel this item?',
            text: "This will remove this specific item from your order.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, cancel item!'
        });

        if (!result.isConfirmed) return;

        try {
            const response = await axios.patch('/user/orders/cancel', {
                orderId: orderId,
                itemId: itemId,
                reason: "User cancelled specific item"
            });

            if (response.data.success) {
                await Swal.fire('Cancelled!', 'Item has been cancelled.', 'success');
                window.location.reload();
            } else {
                showToast(response.data.message, 'error');
            }
        } catch (error) {
            console.error(error);
            showToast(error.response?.data?.message || "Something went wrong", "error");
        }
    }

    // 5. Helpers
    function setReturnType(type, btnElement) {
        document.getElementById('returnType').value = type;
        document.querySelectorAll('.type-btn').forEach(btn => btn.classList.remove('active'));
        btnElement.classList.add('active');
    }

    function handleFileSelect(input) {
        const fileNameSpan = document.getElementById('fileNameDisplay');
        if (input.files && input.files[0]) {
            fileNameSpan.innerText = "Selected: " + input.files[0].name;
            fileNameSpan.style.color = "#2563EB";
            fileNameSpan.style.fontWeight = "600";
        } else {
            fileNameSpan.innerText = "Drag & drop or click to upload";
            fileNameSpan.style.color = "#9CA3AF";
        }
    }
</script>